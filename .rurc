# configuration for run_unittests script to run (selected) unittests with coverage

# location of testscripts
[testdir]
unittests

# mapping of parameter values to testscripts
[testscripts]
r2h:   test_r2h.py
rhfn:  test_rhfn.py
rhdir: test_rhdir.py
dmlf:  test_dmlf.py
dmlm:  test_dmlm.py
dmlp:  test_dmlp.py

# mapping of parameter values to scripts to test
[testees]
r2h:   app/rst2html.py
rhfn:  app/rst2html_functions.py
rhdir: app/rst2html_directives.py
dmlf:  app/docs2fs.py
dmlm:  app/docs2mongo.py
dmlp:  app/docs2pg.py
